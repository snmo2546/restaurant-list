<!-- ./views/index.handlebars -->

<!-- search bar -->
<div class="container search-bar d-flex justify-content-center">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <!-- create button -->
  <a class="btn btn-danger d-flex align-items-center" href="./restaurants/new">新增餐廳</a>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <div class="d-flex justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="functions">
                  <a href="./restaurants/{{ this._id }}" class="function-btn"><i class="fas fa-info-circle"></i></a>
                  <a href="./restaurants/{{ this._id }}/edit" class="function-btn"><i class="fas fa-pen"></i></a>
                  <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline">
                    <button type="submit" class="function-btn"><i class="fas fa-trash"></i></button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>