<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">註冊 Register</h1>
      {{> message}}
      <form action="/users/register" method="POST">
        <div class="form-row mb-2">
          <small>*為必填</small>
        </div>
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="輸入姓名" value="{{ name }}">
        </div>
        <div class="form-group">
          <label for="email">信箱*</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入信箱"
            value="{{ email }}" required>
        </div>
        <div class="form-group">
          <label for="password">密碼*</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼"
            value="{{ password }}" required>
        </div>
        <div class="form-group">
          <label for="confirmPassword">確認密碼*</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="再次輸入密碼確認" value="{{ confirmPassword }}" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">註冊</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">以 Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        已經有帳號了嗎? <a href="/users/login">登入</a>
      </p>
    </div>
  </div>
</div>